cabal-version:      3.0
name:               nightfall
version:            0.1
-- synopsis:
-- description:
homepage:           https://github.com/qredo/nightfall
license:            Apache-2.0
license-file:       LICENSE
author:             Qredo
maintainer:         info@qredo.com
-- copyright:
build-type:         Simple
-- extra-source-files:

common warnings
    ghc-options: -Wall

common dev-flags
--  Somehow causes panic crashes on subsequent launches when running test suite inside multi-repl
--    if impl(ghc >= 9.6)
--        ghc-options: -fwrite-if-simplified-core

library
    import:           warnings
    import:           dev-flags
    exposed-modules:
                      Examples.Cond
                      Examples.Fun
                      Examples.Inputs
                      Examples.Loops
                      Examples.Simple
                      Nightfall
                      Nightfall.Lang.Internal.Felt
                      Nightfall.Lang.Internal.Types
                      Nightfall.Lang.Types
                      Nightfall.Lang.Syntax.Default
                      Nightfall.Lang.Syntax.DotRecord
                      Nightfall.MASM
                      Nightfall.MASM.Callgraph
                      Nightfall.MASM.Integral
                      Nightfall.MASM.Miden
                      Nightfall.MASM.Types
                      Nightfall.Targets.Miden
    -- other-extensions:
    build-depends:    base >=4.16 && <5
                    , containers
                    , directory
                    , dlist
                    , filepath
                    , free
                    , mod
                    , mtl
                    , process
                    , temporary
                    , text
    hs-source-dirs:   src
    default-language: Haskell2010

executable nightfall
    import:           warnings

    main-is:          Main.hs

    --other-modules:

    --other-extensions:

    build-depends:
        base >= 4.16 && < 5
      , nightfall
      , mtl
      , containers

    --ghc-options:

    hs-source-dirs:   app

    default-language: Haskell2010

test-suite nightfall-test
    import:           warnings
    import:           dev-flags
    default-language: Haskell2010
    -- other-modules:
    -- other-extensions:
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          Main.hs
    build-depends:
        aeson,
        base >=4.16 && <5,
        nightfall,
        mtl,
        filepath,
        tasty,
        tasty-golden
